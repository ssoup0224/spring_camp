<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.PostingimgMapper">

	<!---->
	<select id="detail" parameterType="hashMap" resultType="com.demo.dto.PostingimgDto$DetailResDto">
		SELECT postingimg.id
			 , postingimg.deleted
			 , postingimg.created_at as createdAt
			 , postingimg.modified_at as modifiedAt

			 , postingimg.posting_id as postingId
			 , postingimg.img
		FROM postingimg
		WHERE postingimg.id = #{id}
	</select>

    <!-- 공통 WHERE 절 -->
    <sql id="commonWhere">
        WHERE postingimg.id is not null
        <if test = "deleted != null">AND postingimg.deleted = #{deleted}</if>
        <if test = "postingId != null">AND postingimg.posting_id = #{postingId}</if>
    </sql>

    <select id="list" parameterType="hashMap" resultType="com.demo.dto.PostingimgDto$DetailResDto">
        SELECT postingimg.id
        FROM postingimg
        <include refid="commonWhere"/>
        <if test = "orderby != null and orderby =='id'">ORDER BY postingimg.id </if>
        <if test = "orderway != null and orderway =='DESC'"> DESC</if>
        <if test = "orderway != null and orderway =='ASC'"> ASC</if>
    </select>


    <select id="listCount" parameterType="hashMap" resultType="Integer">
        SELECT count(postingimg.id) as listCount
        FROM postingimg
        <include refid="commonWhere"/>
    </select>

    <select id="pagedList" parameterType="hashMap" resultType="com.demo.dto.PostingimgDto$DetailResDto">
        SELECT postingimg.id
        FROM postingimg
        <include refid="commonWhere"/>
        <if test = "orderby != null and orderby =='id'">ORDER BY postingimg.id </if>
        <if test = "orderway != null and orderway =='DESC'"> DESC</if>
        <if test = "orderway != null and orderway =='ASC'"> ASC</if>
        LIMIT #{offset}, #{perpage}
    </select>

    <select id="scrolledList" parameterType="hashMap" resultType="com.demo.dto.PostingimgDto$DetailResDto">
        SELECT postingimg.id
        FROM postingimg
        <include refid="commonWhere"/>

        <if test = "orderway != null and orderway =='DESC'">
            <if test = "orderby != null and orderby =='id'">
                <if test = "cursor != null">
                AND #{cursor} > postingimg.id
                </if>
                ORDER BY postingimg.id DESC
            </if>
        </if>
        <if test = "orderway != null and orderway =='ASC'">
            <if test = "orderby != null and orderby =='id'">
                <if test = "cursor != null">
                AND postingimg.id > #{cursor}
                </if>
                ORDER BY postingimg.id ASC
            </if>
        </if>
        LIMIT 0, #{perpage}
    </select>
</mapper>